@model IEnumerable<adminpage.Models.WorldBoundary>

@{
    ViewData["Title"] = "Index";
}

<h1>Main table</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FugitiveStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneralInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntryDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegDoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Housing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Charity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddInfo)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Gid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Gid">Details</a> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FugitiveStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneralInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegDoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Housing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nutrition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Charity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddInfo)
            </td>

        </tr>
}
    </tbody>
</table>
